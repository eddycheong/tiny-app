<header>
  <h1>TinyApp</h1>
  <% if(username) { %>
  <div>
    Welcome <%= username %>!
    <form action="/logout" method=POST>
      <input type="submit" value="Logout">
    </form>
  </div>
  <% } else { %>
  <form action="/login" method="POST">
    <input type="text" name="username">
    <input type="submit" value="Login">
  </form>
  <% } %>
</header>